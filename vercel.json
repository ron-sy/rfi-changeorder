{
    "version": 2,
    "builds": [
        {
            "src": "api.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "api.py"
        }
    ],
    "env": {
        "OPENAI_API_KEY": "@openai-api-key",
        "FIREBASE_STORAGE_BUCKET": "@firebase-storage-bucket"
    }
} 